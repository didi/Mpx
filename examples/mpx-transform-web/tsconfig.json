  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": ["src", "vite.config.ts"],
  "exclude": [
    "build",
    "dist",
    "config"
  ]
}
